// anchors or query strings can be generated as well
=link_to "Comment wall", profile_path(@profile, anchor: "wall")
%a= href="/profiles/1#wall" value="Comment wall"

=link_to "Ruby on Rails search", controller: "searches", query: "ruby on rails"
%a= href="searches?query=ruby+on+rails" value="Ruby on Rails search"

