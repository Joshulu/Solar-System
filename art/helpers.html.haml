// ** :back generates a link to the referrer(previous page?)
// generates link tag 

=link_to(body, url, html_options = {})

// :data, :method, :remote, --> :data options same as button_to
=link_to "Profile", controller: "profiles", action: "show", id: @profile
=link_to "Profile", profile_path(@profile)
=link_to "Profile", @profile
%a= href="/profiles/1" value="Profile"

=link_to "Profiles", profile_path
%a= herf="/profiles" value="Profiles"

